# Jan Document Plugin Configuration
# Copy this file to config.env and edit as needed

# Tesseract OCR path (leave empty for auto-detection)
# Windows example: C:\Program Files\Tesseract-OCR\tesseract.exe
TESSERACT_PATH=

# Server ports
PROXY_PORT=1338
JAN_PORT=1337

# Document storage directory (relative to app folder or absolute path)
STORAGE_DIR=.\jan_doc_store

# Embedding model for semantic search
# Options: all-MiniLM-L6-v2 (fast), all-mpnet-base-v2 (accurate)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Automatically inject document context into prompts
AUTO_INJECT=true

# Maximum tokens for injected context
MAX_CONTEXT_TOKENS=8000

# Maximum chunks to retrieve per query
MAX_CHUNKS=5

# Auto-open browser when server starts
AUTO_OPEN_BROWSER=true
